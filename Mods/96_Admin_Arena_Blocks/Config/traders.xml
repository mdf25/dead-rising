		</trader_info>
		
		<!-- Selling Vending Machine -->
		<trader_info id="10" reset_interval="1" override_buy_markup="1.0" allow_sell="true" min_inventory="0" max_inventory="0" min_items_swapped="0" max_items_swapped="0">
			<trader_items count="1">
				
			</trader_items>
		</trader_info>
		
	</insertAfter>
	
</configs>