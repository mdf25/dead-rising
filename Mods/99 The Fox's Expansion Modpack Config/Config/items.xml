<set xpath="/items/item[@name='Battle Spear']/effect_group/passive_effect[@name='EntityDamage']">30</set>
<set xpath="/items/item[@name='Golden Axe']/effect_group/passive_effect[@name='EntityDamage']">32</set>

<!-- Increase resource gathering rates for axes and tools that really should do more damage to certain blocks -->
<set xpath="/items/item[@name='Dull Axe']/effect_group/passive_effect[@name='DamageModifier' and @tags='wood']/@value">0.8</set>
<set xpath="/items/item[@name='Hatchet']/effect_group/passive_effect[@name='DamageModifier' and @tags='wood']/@value">1.1</set>
<set xpath="/items/item[@name='Golden Axe']/effect_group/passive_effect[@name='DamageModifier' and @tags='wood']/@value">3.0</set>
<set xpath="/items/item[@name='Old Warhammer']/effect_group/passive_effect[@name='DamageModifier' and (@tags='stone' or @tags='metal')]/@value">0.5</set>
<set xpath="/items/item[@name='Thors Hammer']/effect_group/passive_effect[@name='DamageModifier' and (@tags='stone' or @tags='metal')]/@value">2.5</set>



<!-- Remove all Gunnys Guide recipes that allow gun crafting from Vanilla and Advanced Firearms. All guns are now only found in loot, but the Blunderbuss & Compound Bow can still be crafted. -->
<remove xpath="/items/item[contains(@name, 'Guide: Pistols')]" />
