<configs>

<!-- Alters the boiled meat so that it gives more health back. -->
<set xpath="//property[@name='Extends' and @value='BoiledMeatBase']/..//triggered_effect[@cvar='foodHealthAmount']/@value">7</set>



<!-- Stack size adjustments for ammo and resource items, to be in line with Advanced Firearms -->
<set xpath="/items/item[starts-with(@name, 'ammo')]/property[@name='Stacknumber']/@value">5000</set>
<set xpath="/items/item[starts-with(@name, 'resource')]/property[@name='Stacknumber']/@value">5000</set>


<!-- Weapon damage balancing -->
<!-- Basic bats and clubs you get at start -->
<set xpath="/items/item[@name='Old Wooden Bat']/effect_group/passive_effect[@name='EntityDamage']">17</set>
<set xpath="/items/item[@name='Rusty Dagger']/effect_group/passive_effect[@name='EntityDamage']">18</set>
<set xpath="/items/item[@name='Bone Club']/effect_group/passive_effect[@name='EntityDamage']">19</set>
