<configs>
	<!-- Adds the ALL category for the weapon anvil -->
	<insertBefore xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[1]">
		<crafting_category name="" icon="ui_game_symbol_hammer" display_name="lblAll" />
	</insertBefore>
	
	
	<!-- Removes unneeded areas from weapon workbench in Melee mod. -->
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='Novelty']" />
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='High Class']" />
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='Lightsabers']" />
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='Fun']" />
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='Advanced']" />
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='Advanced Tools']" />
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='Defensive']" />
	<remove xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[@name='WorkbenchCustom']" />
	
	
	<insertAfter xpath="//crafting_category_list[@display_type='Weapon Anvil']/crafting_category[1]">
		<crafting_category name="" icon="ui_game_symbol_hammer" display_name="lblAll" />
		<crafting_category name="Ammo/Weapons" icon="ui_game_symbol_knife" display_name="lblCategoryAmmoWeapons" />
		<crafting_category name="Tools/Traps" icon="ui_game_symbol_tool" display_name="lblCategoryToolsTraps" />
	</insertAfter>
</configs>